<!DOCTYPE html>
<html lang="en">
<%- include ('./partials/head', { stylesFile: 'general-styles.css'}) %>

    <body>
        <%- include ('./partials/header') %>
        <main>
            <div class="container products-wrapper">
                <div class="row">
                    <div class="col-12">
                        <h2 class="products-title">Formulario de edicion de productos</h2>
                    </div>
                </div>
                <div class="col-12">
                        <form action="/products/<%= productToEdit.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <div class="row product-detail">
                            <div class="col-12 col-md-6">
                              <label for="name" class="form-label">Nombre del producto:</label>
                              <input
                                type="text"
                                id="name"
                                name="name"
                                placeholder="Ej: Nombre del plato"
                                class="form-input"
                                value="<%=productToEdit.name%>"
                              />
                            </div>
                            <div class="col-12 col-md-6">
                              <label for="price" class="form-label">Precio del producto:</label>
                              <input
                                type="text"
                                id="price"
                                name="price"
                                placeholder="Ej: 5678"
                                class="form-input"
                                value="<%=productToEdit.price%>"
                              />
                            </div>
                            <div class="col-12 col-md-6">
                              <label for="discount" class="form-label">Descuento:</label>
                              <input
                                type="text"
                                id="discount"
                                name="discount"
                                placeholder="Ej: 15"
                                class="form-input"
                                value="<%=productToEdit.discount%>"
                              />
                            </div>
                          
                            <div class="col-12">
                              <label for="ingredientes" class="form-label">Ingredientes:</label>
                              <textarea
                                name="ingredientes"
                                id="ingredientes"
                                class="form-input"
                              ><%=productToEdit.ingredients%></textarea>
                            </div>
                            <div class="col-12">
                              <label for="infoNutricional" class="form-label"
                                >Informacion nutricional:</label
                              >
                              <textarea
                                name="infoNutricional"
                                id="infoNutricional"
                                class="form-input"
                               
                              > <%=productToEdit.infoNutricional%></textarea>
                            </div>
                            <div class="col-12">
                              <label for="cooking" class="form-label">Modo de coccion:</label>
                              <textarea
                                name="cooking"
                                id="cooking"
                                class="form-input"
                                
                              ><%=productToEdit.cooking%></textarea>
                            </div>
                            


                            <div class="col-12">
                                <label for="file-image" class="form-label">Imagen del producto:</label>
                                <input type="file" name="file-image" id="file-image" class="form-input" />
                            </div>
                            <div class="col-12">
                                <img src="/images/<%=productToEdit.image%>" alt="<%=productToEdit.alt%>">
                            </div>
                            <div class="col-12">
                              <label for="alt" class="form-label"
                                >Texto alternativo imagen:</label
                              >
                              <textarea name="alt" id="alt" class="form-input"><%=productToEdit.alt%></textarea>
                            </div>
                       
                            <div class="col-12">
                                <button type="submit" class="buy-now-button">Guardar producto</button>
                            </div>
                        </div>
                    </form>
                </div>
        
            </div>
        </main>
        
        <%- include ('./partials/footer.ejs') %>

    </body>

</html>