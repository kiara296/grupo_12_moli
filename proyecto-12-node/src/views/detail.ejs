<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<%- include ('./partials/head',{ stylesFile: 'detail.css', jsFile: 'detail.js'}) %>
 

<body>

  <!-- Header -->
  <%- include ('./partials/header') %>
    <input type="hidden" id="productId" value="<%= productToShow.id %>">
    <input type="hidden" id="productName" value="<%= productToShow.name %>">
    <input type="hidden" id="productPrice" value="<%= productToShow.price %>">
    <input type="hidden" id="productImage" value="<%= productToShow.image %>">
    <div class="sections-container">
      <section class="section1">
        <div class="title-and-img">
          <h1 class="title"> <%= productToShow.name %> </h1>
          <img class="img" src="/images/<%= productToShow.image %>" alt="<%= productToShow.alt%>" />
        </div>
      </section>
      <section class="section2">
        <div class="articles-container">
          <article>
            <h2 class="title-quantity">Cantidad:</h2>
            <input value="1" type="number"  id="quantity" class="span-quantity" min="1" max="10">
          </article>
          <article>
            <h2 class="title-prize">Precio:</h2>
            <div class="prize-container">
              <span class="prize"> <%= "$" + " " + productToShow.price %></span>
              <form
              id="addProduct-form" 
              >
                <button id="btn" class="button button-submit" type="submit">
                  Agregar
                </button>
              </form>
            </div>
          </article>
        </div>
        <dl class="description">
          <h2 class="title-description">Descripción:</h2>
          <div class="item-description">
            <dt>Ingredientes:</dt>
            <dd>
              <%= productToShow.ingredients%>
            </dd>
          </div>
          <div class="item-description">
            <dt>Informacion nutricional:</dt>
            <dd><%= productToShow.nutritional_info%></dd>
          </div>
          <div class="item-description">
            <dt>Preparación y cocción:</dt>
            <dd><%= productToShow.cooking%></dd>
          </div>
        </dl>
      </section>
    </div>
    <%- include ('./partials/footer.ejs') %>
</body>

</html>