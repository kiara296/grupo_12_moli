<!DOCTYPE html>
<html>
  <!-- Head -->
  <%- include ('./partials/head',{ stylesFile: 'forms.css', jsFile: 'validateFrontRegmoli.js'}) %>

  <body>
    <%- include ('./partials/header') %>
    <main>
      <div class="containerForm">
        <div>
          <h2 class="form-title">Completá tus datos</h2>
        </div>
        <form id="form" action="/users/register" method="POST" enctype="multipart/form-data">
            <div class="formBox">
                <div class="formBox">
                    <label for="name" class="form-label"> Nombre </label>
                    <input
                    type="text"
                    name="name"
                    id="name"
                    placeholder="Ingresá tu nombre "
                    class="form-input"
                    value="<%= data && data.name ? data.name : '' %>"
                    />
                    <% if(errors && errors.name) { %>
                      <span class="error"><%= errors.name.msg %></span>
                    <% } %>
                    <span id="error-name" class='spanErrors'></span>
                </div>   
                <div class="formBox"> 
                    <label for="lastName" class="form-label"> Apellido </label>
                    <input
                    type="text"
                    name="lastname"
                    id="lastname"
                    placeholder="Ingresá tu apellido"
                    class="form-input"
                    value="<%= data && data.lastname ? data.lastname : '' %>"
                    />
                    <% if(errors && errors.lastname) { %>
                      <span class="error"><%= errors.lastname.msg %></span>
                    <% } %>
                </div>
                <span id="error-lastname" class='spanErrors'></span>
                <div class="formBox"> 
                    <label for="user" class="form-label"> Usuario</label>
                    <input
                    type="text"
                    id="user" 
                    name="email"
                    placeholder="Ingresá un e-mail"
                    class="form-input"
                    value="<%= data && data.email ? data.email : '' %>"
                    />
                    <% if(errors && errors.email) { %>
                      <span class="error"><%= errors.email.msg %></span>
                    <% } %>
                    <span id="error-user" class='spanErrors'></span>
                </div>
                <div class="box">
                  <div class="formBox">
                    <label for="profileImage" class="form-label"
                      >Imagen de perfil:</label
                    >
                    <input
                      type="file"
                      value="<%= data && data.profileImage ? data.profileImage : '' %>"
                      name="profileImage"
                      id="profileImage"
                      class="form-input"
                    />
                    <% if(errors && errors.profileImage) { %>
                      <span class="error"><%= errors.profileImage.msg %></span>
                    <% } %>
                    <span id="error-profileImage" class='spanErrors'></span>
                  </div>    
                <div class="formBox"> 
                    <label id="email" class="form-label"> Contraseña </label>
                    <input
                    id="password"
                    type="password"
                    name="password"
                    placeholder="Elegí una contraseña"
                    class="form-input"
                    value="<%= data && data.password ? data.password : '' %>"
                    />
                    <% if(errors && errors.password) { %>
                      <span class="error"><%= errors.password.msg %></span>
                    <% } %>
                    <span id="error-password" class='spanErrors'></span>
                </div>    
                <div class="formBox"> 
                    <label id="email" class="form-label"> Repetir contraseña </label>
                    <input
                    id="pass_confirm"
                    type="password"
                    name="pass_confirm"
                    placeholder="Repetí tu contraseña"
                    class="form-input"
                    value="<%= data && data.pass_confirm ? data.pass_confirm : '' %>"
                    />
                    <% if(errors && errors.pass_confirm) { %>
                      <span class="error"><%= errors.pass_confirm.msg %></span>
                    <% } %>
                    <span id="error-pass_confirm" class='spanErrors'></span>
                </div>    
            </div>
            <div class="formBox">
                <button type="submit" class="button-general">Registrarse</button>
            </div>
        </form>
      </div>
    </main>
    <%- include ('./partials/footer.ejs') %>
  </body>
</html>
