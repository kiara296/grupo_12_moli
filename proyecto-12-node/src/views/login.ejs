<!DOCTYPE html>
<html>
  <!-- Head -->
  <%- include ('./partials/head',{ stylesFile: 'forms.css', jsFile: ''}) %>

  <body>
    <!-- Header -->
    <%- include ('./partials/header') %>

    <main>
      <div class="containerForm">
        <div>
          <h2 class="form-title">Ingresá tus datos</h2>
        </div>
        <form action="/users/auth" method="POST" enctype="multipart/form-data" id="form" >
          <div class="formBox">
            <div class="formBox">
              <label for="email" class="form-label"> Usuario </label>
              <input
                type="text"
                id="email"
                name="email"
                value="<%= userName ? userName : '' %>"
                placeholder="Ingresá tu E-mail"
                class="form-input"
              />
              <span id="error-email" class='spanErrors'></span>
            </div>
            <div class="formBox">
              <label for="pass" class="form-label"> Contraseña </label>
              <input
                type="password"
                name="pssw"
                id="pass"
                placeholder="Ingresá tu contraseña"
                class="form-input"
              />
              <span id="error-pass" class='spanErrors'></span>
            </div>
            <div class="recordarme">
              <input type="checkbox" name="remember" id="remember">
              <label for="remember">Recordarme</label>
            </div>
          </div>
          <div class="formBox">
            <button type="submit" class="button-general">Ingresar</button>
          </div>
          <% if(message) { %>
            <span class='error'> <%= message %> </span>
          <% } %>
          <nav class="registrate">
            <a href="/users/regmoli"> ¿No tenes cuenta? Registrate </a>
          </nav>
        </form>
      </div>
    </main>
    <%- include ('./partials/footer.ejs') %>
  </body>
</html>
