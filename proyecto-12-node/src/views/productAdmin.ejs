<!DOCTYPE html>
<html lang="en">
  <%- include ('./partials/head',{ stylesFile: 'productAdmin.css', jsFile: ''}) %>
  <body>
    <%- include ('./partials/header') %>
    <main>
      <h1>Mis productos</h1>
      <div class="agregarProduct">
        <a href="/products/create"><button type="submit" value="add" class="button-general">
          + Agregar producto
        </button></a>
      </div>
        <section class="sector1">
          <% products.forEach(product => { %>
            <article>
              <div class="father">
                <div>
                  <img  class="productoImage"src="../images/<%= product.image %>" />
                </div>
                <div>
                  <p class="descrip"><%= product.name %></p>
                </div>
                <div>
                  <p class="descrip"><%= product.description %></p>
                </div>
                <div>
                  <p class="price">$ <%= product.price %></p>
                </div>
                <div class="buttonForm">
                  <a href="/products/<%= product.id%>/detail ">
                    <button type="submit" class="button-general">
                    Ver
                    </button>
                  </a>    
                </div>
                <div class="buttonForm">
                  <a href="/products/<%= product.id %>/edit" >
                    <button type="submit" class="button-general">
                      Editar
                    </button>
                  </a>
                 
                </div>
                <form  id="formDeleteCart" action="/products/<%=product.id%>?_method=DELETE" method="POST">
                  <div class="deleteCart">
                    <button type="submit" class="button-general">
                      <i class="far fa-trash-alt"></i>
                    </button>
                  </div>
                </form>
              </div>
            </article>
          <% }) %>
        </section>
     
    </main>
    <%- include ('./partials/footer.ejs') %>
  </body>
</html>